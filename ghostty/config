# vim:ft=ghostty

theme = "Oceanic-Next"

font-family = "Iosevka Fixed"
font-style = "Light"
font-size = 15

# Windows
window-theme = "dark"
window-height = 70
window-width = 132
window-inherit-working-directory = false
window-title-font-family = "Iosevka Fixed"
window-vsync = true
macos-titlebar-tabs = true
unfocused-split-opacity = 0.96

# Shell
shell-integration = "none"
shell-integration-features = "no-cursor"

# Clipboard
copy-on-select = clipboard

# Misc
cursor-style-blink = false
mouse-hide-while-typing = true
quit-after-last-window-closed = true

# Keys
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = cmd+shift+left=goto_split:previous
keybind = cmd+shift+right=goto_split:next
